---
import React from "@/assets/icons/React.astro";

import CardProject from "./CardProject.astro";
import Bootstrap from "@/assets/icons/Bootstrap.astro";
import Javascript from "@/assets/icons/Javascript.astro";
import LinkButton from "@/components/LinkButton.astro";
import Github from "@/assets/icons/Github.astro";
import Link from "@/assets/icons/Link.astro";
import Sass from "@/assets/icons/Sass.astro";
import HTML from "@/assets/icons/HTML.astro";
import Redux from "@/assets/icons/Redux.astro";
import Typescript from "@/assets/icons/Typescript.astro";
import Tailwind from "@/assets/icons/Tailwind.astro";
import AstroIcon from "@/assets/icons/AstroIcon.astro";


---

<section class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-sm:mx-5">

  <CardProject
  title="Pokedex"
  description="Pokedex personalizada utilizando la libreria PokéAPI"
  img="img/pokedex.webp"
  linkGithub="https://github.com/tonofalco/Pokedex"
  linkPreview="https://pokedex-delta-five-67.vercel.app/pokemons/1"
>
  <div slot="tools">
    <div class="flex flex-wrap items-center space-x-3">
      <div class="w-6 h-6">
        <AstroIcon />
      </div>
      <div class="w-6 h-6">
        <Typescript />
      </div>
      <div class="w-8 h-8">
        <Tailwind />
      </div>
    </div>
  </div>
</CardProject>

  <CardProject
    title="Cotizador de transportes"
    description="Aplicacion para obtener presupuestos de viajes usando la Api de Google Maps"
    img="img/cotizador-clientes.webp"
    linkGithub="https://github.com/tonofalco/googleMapsApi"
    linkPreview="https://cotizador-clientes.netlify.app/"
  >
    <div slot="tools">
      <div class="flex flex-wrap items-center space-x-3">
        <div class="w-6 h-6">
          <React />
        </div>
        <div class="w-6 h-6">
          <Javascript />
        </div>
        <div class="w-6 h-6">
          <Redux />
        </div>
        <div class="w-7 h-7">
          <Bootstrap />
        </div>
      </div>
    </div>
  </CardProject>

  <CardProject
    title="Reproductor MP3"
    description="Reproductor de musica online con diversas funciones"
    img="/img/media-player.webp"
    linkGithub="https://github.com/tonofalco/Media_player_React_TS_Tailwind"
    linkPreview="https://media-player-react-ts-tailwind.vercel.app/"
  >
    <div slot="tools">
      <div class="flex flex-wrap items-center space-x-3">
        <div class="w-6 h-6">
          <React />
        </div>
        <div class="w-6 h-6">
          <Typescript />
        </div>
        <div class="w-8 h-8">
          <Tailwind />
        </div>
      </div>
    </div>
  </CardProject>

  <CardProject
    title="Generador de Gifs"
    description="Aplicacion para buscar Gifs de interes"
    img="/img/Gifs.webp"
    linkGithub="https://github.com/tonofalco/react-gifexpert"
    linkPreview="https://react-gifexpert.vercel.app/"
  >
    <div slot="tools">
      <div class="flex flex-wrap items-center space-x-3">
        <div class="w-6 h-6">
          <React />
        </div>
        <div class="w-6 h-6">
          <Javascript />
        </div>
        <div class="w-8 h-8">
          <Bootstrap />
        </div>
      </div>
    </div>
  </CardProject>

  <CardProject
    title="Cafeteria web"
    description="Plantilla de un sitio web informativo para cafeteria con diseño dinamico"
    img="/img/cafeteria-web.webp"
    linkGithub="https://github.com/tonofalco/cafeteria"
    linkPreview="https://tonofalco.github.io/cafeteria/"
  >
    <div slot="tools">
      <div class="flex flex-wrap items-center space-x-3">
        <div class="w-6 h-6">
          <HTML />
        </div>
        <div class="w-7 h-7">
          <Bootstrap />
        </div>
        <div class="w-6 h-6">
          <Javascript />
        </div>
      </div>
    </div>
  </CardProject>

  <CardProject
    title="Calculadora digital"
    description="Calculadora funcional con modo oscuro implementado con JS puro."
    img="/img/calculadora-digital.webp"
    linkGithub="https://github.com/tonofalco/Basic_calculator"
    linkPreview="https://tonofalco.github.io/Basic_calculator/"
  >
    <div slot="tools">
      <div class="flex flex-wrap items-center space-x-3">
        <div class="w-6 h-6">
          <HTML />
        </div>
        <div class="w-7 h-7">
          <Sass />
        </div>
        <div class="w-6 h-6">
          <Javascript />
        </div>
        
      </div>
    </div>
  </CardProject>
</section>

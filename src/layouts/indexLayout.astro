---
// Supports weights 100-900
import "@fontsource-variable/montserrat";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "../styles/global.css";
import ThemeToggle from "@/components/ThemeToggle.astro";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- BACKGROUND -->
    <div
      class="fixed inset-0 -z-10 w-full min-h-screen bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1.5px)] bg-fixed [background-size:20px_20px]"
    >
    </div>
    <div
      class="fixed top-0 z-[-2] w-full min-h-screen dark:bg-[#000000] dark:bg-[radial-gradient(#ffffff33_0.5px,#00091d_1px)] dark:bg-fixed [background-size:20px_20px]"
    >
    </div>

    <Header />
    <slot />

    <ThemeToggle />

    <Footer />
  </body>
</html>
